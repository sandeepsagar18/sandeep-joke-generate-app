<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Joke Generator</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <style>
      body {
        background-image: url(https://wallpapercave.com/wp/wp6963043.jpg);

         
        background-size: cover;
    
      }
      body:hover {
        transition-property: all;

        transition-duration: 3s;
        background-image: url(https://i.pinimg.com/originals/77/f6/d5/77f6d5c5af558f17cbc1cb3e33e83525.jpg);
      }

      .container {
        border:3px solid black;
        border-radius: 80px;
        
        margin: auto;
        height: 700px;

        width: 650px;
        box-shadow: 20px 4px 50cap rgb(231, 5, 5);

        background-image: url("https://img.freepik.com/premium-photo/funny-smiley-emoticon-abstract-background-3d-illustration_934652-13168.jpg");

        background-size: cover;
        margin-top: 50px;
        margin-left: 1200px;
      }
      h1 {
        border-radius: 8px;
        margin: auto;
        margin-top: 30px;
        text-align: center;
        text-shadow: 1px 1px 1px rgb(204, 22, 22);
    
        width: max-content;
        box-shadow: 2px 2px 2cap yellow;
      }
      .joke {
        color: black;
        font-size: xx-large;
        text-align: center;
        padding-top: 100px;

      }
      .container:hover {
        border: 6px solid white;

        transition-property: all;

        transition-duration: 3s;

        box-shadow: 2px 2px 250cap greenyellow;

        background-image: url(https://img.freepik.com/premium-vector/face-with-tears-joy-emoji-laughing-tears_184860-61.jpg?w=826);
      }
      .btn {
        border: 4px none;

        font-style: italic;
        font-weight: 900;

        cursor: pointer;

        box-shadow: 2px 2px 3cap rgb(78, 240, 86);

        border-radius: 20px;
        font-family: "Times New Roman", Times, serif;
        font-size: larger;
        height: 60px;
        max-width: max-content;
        width: 200px;

        text-transform: uppercase;
        margin-top: 30px;
        background-color: rgb(240, 244, 160);
        color: rgb(17, 16, 16);
        float: right;
        margin-right: 400px;
      }
      .btn:hover {
        background: linear-gradient(90deg, #f8ff00 0%, #3ad59f 100%);
        /* height:100px; */

        box-shadow: 0 0 35px red;
      }
      PRE {
        /* text-decoration:underline; */
        text-shadow: 2px 2px 15px rgb(224, 21, 21);
        font-size: 50px;
      }

      @media screen and (min-width= 1000px) {
        body {
          background-image: url(https://wallpapercave.com/wp/wp6963043.jpg);

          
          background-size: cover;
        
        }
        body:hover {
          transition-property: all;

          transition-duration: 3s;
          background-image: url(https://i.pinimg.com/originals/77/f6/d5/77f6d5c5af558f17cbc1cb3e33e83525.jpg);
        }
      }
    </style>
  </head>
  <body>
    <pre>
  ...FUNNY JOKE GENERATE 
        MAKE YOUR DAY HAPPY...</pre
    >

    <div class="container">
       

      <div class="joke">LOADING FUNNY JOKES...</div>
    </div>
    <center>
      <button class="btn" id="btn">next_joke</button>
    </center>

    <script>
      const jokes = document.querySelector(".joke");
      const btn = document.getElementById("btn");

      const generateJokes = async () => {
        try {
          const setHeader = {
            headers: {
              Accept: "application/json",
            },
          };
          // Fetching Api with async await
          const url = "https://icanhazdadjoke.com";
          //  const url = "https://hindi-jokes-api.onrender.com/jokes/2?api_key=YourApiKey";
          const res = await fetch(url, setHeader);
          const data = await res.json();
          console.log(data);
          jokes.innerHTML = data.joke;
        } catch (error) {
          console.log("The error is ${error}");
        }
      };

      // Calling a function
      btn.addEventListener("click", generateJokes);
      generateJokes();
    </script>
  </body>
</html>
